<div class="container">

<h3>配送先/一覧</h3>


<div class="row">
<div class="col-md-12">
<%= form_with model:@address,url:public_addresses_path,method: :post do |f| %>
<%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
<%= f.text_field :postal_code %></br>


<%= f.label :address, "住所" %>
<%= f.text_field :address  %></br>

<%= f.label :name, "宛名" %>
<%= f.text_field :name %></br>

<%= f.submit'新規登録', class:"btn btn-sm btn-success mt-3 mb-3" %>
<% end %>
</div>
</div>

<div class="col-md-8">
<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>


<% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>

      <td><%= link_to '編集する',edit_public_address_path(address.id) ,class:"btn btn-sm btn-success " %>
          <%= link_to'削除する',public_address_path(address.id),method: :delete ,class:"btn btn-sm btn-danger" %></td>

    </tr>
  </tbody>
<% end %>
</table>

</div>

</div>
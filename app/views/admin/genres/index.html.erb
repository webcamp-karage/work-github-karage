<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="mb-5">ジャンル一覧・追加</h3>
      <%= form_with model:@genre,url: admin_genres_path,method: :post do |f| %>
       <%= f.label :name, "ジャンル名", class: "pr-3" %>
       <%= f.text_field:name,placeholder:"ジャンル名", class: "mr-3" %>
       <%= f.submit'新規登録' , class:"btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する',edit_admin_genre_path(genre),class:"btn btn-sm btn-success" %>  </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-7"></div>
  </div>
</div>
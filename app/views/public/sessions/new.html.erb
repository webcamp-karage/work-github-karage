<section class="inner">
  <h2>ログイン</h2>
  <% if flash[:danger] %>
    <p><%= flash[:danger] %></p>
  <% end %>
   <%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>
    <div>
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div>
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div>
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>

  <h2>登録がお済みでない方</h2>
  <p><%= link_to "こちら", new_customer_registration_path, class: "underline" %>から新規登録を行なってください。</p>
</section>
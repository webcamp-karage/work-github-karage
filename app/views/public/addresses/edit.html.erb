<div class="container">
<div class="row">
<div class="col-lg-12">

<h3>配送先編集</h3>

<div>
<%= form_with model:@address,url: public_address_path,method: :patch do |f| %>
<%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
<%= f.text_field:postal_code %></br>

<%= f.label :address, "住所" %>
<%= f.text_field:address %></br>

<%= f.label :name, "宛名" %>
<%= f.text_field:name %></br>

<%= f.submit'変更内容を保存' ,class:"btn btn-sm btn-success mt-5" %>
<% end %>
</div>

</div>
</div>
</div>
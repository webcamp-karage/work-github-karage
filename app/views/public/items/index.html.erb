<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-2'>
      <%= render 'public/homes/genre_index', genres: @genres %>

  </div>

  <div class="col-md-10">
    <h3><%= @item_name %>商品一覧<span>(全<%= @items.count %>件)</span></h3>
    <div class='row'>
      <% @items.each do |item| %>
      <div class="col-md-3">
            
              <%= link_to public_item_path(item) do %>
                <div class="item-image">
                    <% if item.image.attached? %>
                      <%= image_tag item.image, size: "280x210" %>
                    <% else %>
                      <%= image_tag 'no_image.jpeg', size: "280x210" %>
                    <% end %>
                </div>
                
                  <div class="item-name text-center"><%= item.name %></div>
                  <div class="item-price text-center">¥<%= (item.price * 110 / 100 ).to_s(:delimited) %>(税込)
                  </div>
                
              <% end %>
          
          </div>
        <% end %>
      </div>
  	</div>
  </div>
</div>
